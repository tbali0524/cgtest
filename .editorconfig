# config file for source code editors.
#
# @see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.clj]
indent_size = 2

# some test cases have input files with trailing spaces that must be kept
[*.txt]
trim_trailing_whitespace = false
